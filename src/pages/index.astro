---
import { SquareArrowOutUpRight } from "@lucide/astro";
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { meta, about } from "../consts.ts";
import LucideIcon from "../components/LucideIcon.astro";
---

<Layout title={meta.about.title} description={meta.about.description}>
  <section>
    <h1 set:html={about.headLine} />
    <p>{about.tagLine}</p>
    <Image
      src={about.profilePic}
      alt="Profile Picture"
      class="mx-auto my-4 w-32 rounded-full"
    />
    <p set:html={about.description} class="text-base-content/80" />
    <div class="my-4 flex gap-2">
      {
        about.links.map((link) => (
          <a
            href={link.href}
            target="_blank"
            class="btn btn-soft btn-circle btn-accent"
            title={link.icon}
          >
            <LucideIcon name={link.icon} />
          </a>
        ))
      }
    </div>
    <div class="flex flex-col gap-2 sm:flex-row">
      <a
        class="btn btn-primary sm:flex-1"
        href={about.resumeHref}
        target="_blank"
        >Open Resume<SquareArrowOutUpRight size="1rem" />
      </a>
      <a class="btn btn-soft btn-accent sm:flex-1" href="/projects"
        >My Projects</a
      >
    </div>
  </section>

  <section class="mt-10">
    <h2>
      <span class="fancy-highlight">Work Experience</span>
    </h2>
    <div class="mt-2 flex flex-col gap-6">
      {
        about.workExperience.map((exp) => (
          <div>
            <h3>{exp.title}</h3>
            <div class="primary-badge">{exp.timeline}</div>
            <p class="mb-1">{exp.company}</p>
            <p class="text-base-content/80">{exp.description}</p>
          </div>
        ))
      }
    </div>
  </section>

  <section class="mt-10">
    <h2>
      <span class="fancy-highlight">Education</span>
    </h2>
    <div class="mt-2 flex flex-col gap-6">
      {
        about.education.map((edu) => (
          <div>
            <h3>{edu.title}</h3>
            <div class="primary-badge">{edu.timeline}</div>
            <p class="mb-1">{edu.institution}</p>
            <p class="text-base-content/80">{edu.description}</p>
          </div>
        ))
      }
    </div>
  </section>

  <section class="mt-10">
    <h2>
      <span class="fancy-highlight">Get In Touch</span>
    </h2>
    <div class="mt-2">
      <p set:html={about.getInTouch} class="text-base-content/80" />
    </div>
  </section>
</Layout>
