---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

import FormattedDate from "../../components/FormattedDate.astro";
import Layout from "../../layouts/Layout.astro";
import { Rss } from "@lucide/astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout>
  <div class="flex items-center justify-between">
    <h2>
      <span class="fancy-highlight">Latest Posts</span>
    </h2>
    <a href="/rss.xml" title="RSS" class="btn btn-soft btn-circle"><Rss /></a>
  </div>

  <section class="mt-6 flex flex-col gap-10">
    {
      posts.map((post) => (
        <a
          href={`/blog/${post.id}/`}
          class="flex flex-col sm:flex-row sm:gap-4"
        >
          <div class="w-full sm:w-1/3">
            {post.data.heroImage ? (
              <Image
                src={post.data.heroImage}
                alt="Post image"
                class="rounded-lg object-cover"
              />
            ) : (
              <div class="bg-base-200 flex h-30 items-center justify-center rounded-lg">
                No image
              </div>
            )}
          </div>
          <div class="w-full sm:w-2/3">
            <h3 class="hover:underline">{post.data.title}</h3>
            <p class="primary-badge mt-1">
              <FormattedDate date={post.data.pubDate} />
            </p>
            <p>{post.data.description}</p>
          </div>
        </a>
      ))
    }
  </section>
</Layout>
