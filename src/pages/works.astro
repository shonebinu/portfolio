---
import Layout from "../layouts/Layout.astro";
import SampleImage from "../assets/blog-placeholder-1.jpg";
import { Image } from "astro:assets";
import { Github, Globe } from "@lucide/astro";
---

<Layout>
  <h2>
    <span class="fancy-highlight">My Works</span>
  </h2>

  <section class="mt-6 flex flex-col gap-6">
    <div class="flex flex-col sm:flex-row sm:gap-4">
      <div class="w-full sm:w-1/3">
        <Image src={SampleImage} alt="Project image" class="rounded-lg" />
      </div>
      <div class="w-full sm:w-2/3">
        <h3>MGU Scraper</h3>
        <div class="mt-1 flex flex-wrap gap-1">
          <span class="primary-badge">Streamlit</span>
          <span class="primary-badge">Python</span>
          <span class="primary-badge">BeautifulSoup</span>
        </div>
        <p class="mt-1">
          MGUScraper is a tool that simplifies the bulk extraction of student's
          exam results under MG University, Kottayam.
        </p>
        <div class="mt-1 flex gap-2">
          <button class="btn btn-accent btn-soft flex-1"
            ><Github />Source</button
          >
          <button class="btn btn-soft flex-1"><Globe />Live</button>
        </div>
      </div>
    </div>
  </section>
</Layout>
